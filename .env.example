# X-Wise News Crawler - Environment Configuration Example
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration (Direct Connection)
# ============================================
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=wise_local

# ============================================
# Crawler Configuration
# ============================================
CRAWLER_USER_AGENT=XwiseNewsCrawler/1.0 (+https://x-wise.io; contact@x-wise.io)
CRAWLER_TIMEOUT=30
CRAWLER_MAX_RETRIES=3
CRAWLER_RETRY_DELAY=5

# ============================================
# Rate Limiting (requests per minute)
# ============================================
RATE_LIMIT_VNEXPRESS=30
RATE_LIMIT_ZINGNEWS=30
RATE_LIMIT_TUOITRE=30
RATE_LIMIT_DANTRI=30

# ============================================
# Redis Configuration
# ============================================
REDIS_ENABLED=true
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Scheduler Configuration
# ============================================
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=Asia/Ho_Chi_Minh

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/crawler.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# ============================================
# Advanced Configuration
# ============================================
MAX_ARTICLES_PER_CATEGORY=50
CACHE_TTL=7776000
DEBUG=false

# ============================================
# CDN Configuration (0x2labs)
# ============================================
CDN_UPLOAD_URL=https://upload.0x2labs.com/upload
CDN_API_KEY=your_api_key_here
CDN_BUCKET=images
