{
    "domain": "dantri.com.vn",
    "name": "Dân Trí",
    "enabled": true,
    "crawler_type": "static",
    "description": "Báo Dân Trí - Tin tức tổng hợp Việt Nam",
    "category_mapping": {
        "xa-hoi": "POLITICS",
        "the-gioi": "WORLD",
        "kinh-doanh": "BUSINESS",
        "van-hoa": "CULTURE",
        "giao-duc": "EDUCATION",
        "suc-khoe": "HEALTH",
        "the-thao": "SPORTS",
        "giai-tri": "ENTERTAINMENT",
        "phap-luat": "LAW",
        "du-lich": "TRAVEL",
        "khoa-hoc-cong-nghe": "TECH",
        "o-to-xe-may": "AUTO"
    },
    "list_page": {
        "url_pattern": "https://dantri.com.vn/{category}.htm",
        "selectors": {
            "article_links": "h3.article-title a, h2.article-title a, h3 a.article-thumb",
            "pagination": "div.pagination a"
        }
    },
    "detail_page": {
        "selectors": {
            "title": "h1.title-page",
            "summary": "h2.singular-sapo",
            "content": "div.singular-content, div.e-magazine__body",
            "thumbnail": "meta[property='og:image']",
            "published_date": "time.author-time",
            "category": "ul.breadcrumb li a",
            "tags": "div.tag-list a",
            "author": "div.author-name"
        },
        "remove_elements": [
            "div.box-comment",
            "div.box-related-news",
            "div.ads",
            "div.advertisement",
            "script",
            "iframe",
            "div.banner",
            "div.box-category"
        ]
    },
    "rate_limit": {
        "requests_per_minute": 30,
        "delay_between_requests": 2
    },
    "schedule": {
        "cron": "0 */2 * * *",
        "description": "Chạy mỗi 2 giờ"
    }
}
